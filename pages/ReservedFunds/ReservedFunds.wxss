/* pages/ReservedFunds/ReservedFunds.wxss */
.news {
    background: #eee;
    padding: 25rpx;
    margin:0px;
    border-radius: 40rpx;
}
.selection{
    text-align: center;
    font-size: 28rpx;
    margin-bottom: 30rpx;
    color:#333;
}
.newsList {
    background: #fff;
    padding: 30rpx;
    border-radius: 3px;
    margin-bottom: 10px;
}

.title {
    display: flex;
    align-items: center;
    line-height: 1;
}

.title .essence {
    font-size: 22rpx;
    background: #c40000;
    padding: 6rpx 10rpx;
    color: #fff;
    border-radius: 100rpx;
    margin-right: 20rpx;
    white-space: nowrap
}

.title .newTitle {
    font-size: 28rpx;
    color: #333;
    word-wrap: break-word;
    display: inline;
}

.content {
    margin-top: 20rpx;
    line-height: 1;
    text-indent: 24rpx;
}

.content text {
    font-size: 24rpx;
    color: #666;
}

.icon-anonymous-iconfont {
    margin: -4rpx;
    font-size: 24rpx;
}

.bottom {
    margin-top: 25rpx;
    font-size: 20rpx;
    color: #aaa;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.bottom .tags {
    border: 1px solid #aaa;
    padding: 6rpx 20rpx;
    border-radius: 20px;
}

.bottom .from {
    margin-left: 20rpx;
}

.click_button {
    font-size: 20rpx;
    color: #666;
    margin-top: 28rpx;
}

.click_button .butt {
    width: 28%;
    float: right;
    line-height: 40rpx;
    display: flex;
}

.click_button .butt view {
    text-align: center;
    display: inline-block;
    height: 30rpx;
    width: 42rpx;
    border: 2rpx solid #666;
    border-radius: 80px;
    padding: 1px 9px;
    line-height: 30rpx;
}

.click_button .butt view:first-child {
    margin-right: 10px;
}

.click_button .butt i {
    font-size: 20rpx;
    margin-right: 4px;
}

.starActive {
    color: #c40000;
    border: 1px solid #c40000 !important;
}
.ImageModule{
    padding: 0 26rpx;
    display: flex;
    justify-content: space-between;
    margin-bottom: 40rpx;
}
.pic{
    height: 200rpx;
    width: 220rpx;
    background-size: 100% 100%;
    position: relative;
}
.pic .count{
    background: #c40000;
    color: #fff;
    display: block;
    width: 80rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    border-radius:3px;
}
.pic .left{
    font-size: 28rpx;
    width: 100%;
    text-align: center;
    color: #fff;
    position: absolute;
    top: 35%;
}
.pic .left .line{
    width: 60rpx;
    height: 3px;
    color: #c40000;
    border-radius: 3px;
    margin: 0 auto;
    margin-top: 6px;
}