/* pages/specialist/specialist.wxss */
.container {
    margin-top: 0px;
    padding-top: 0px;
}

.specia {
    padding: 45rpx 60rpx;
    margin-top: 31rpx;
    background: #fff;
}

.specia button {
    height: 50rpx;
    background: #c40000;
    font-size: 28rpx;
    border-radius: 80rpx;
    line-height: 50rpx;
    color: #fff;
}

.gotoDetail::after {
    border: none;
}

.line {
    height: 4px;
    width: 50rpx;
    background: #c40000;
    border-radius: 4px;
    margin: 0 auto;
    margin-top: 20rpx;
    display: none
}

.tab_title {
    padding: 22rpx 207rpx;
    display: flex;
    justify-content: space-around;
}

.active .line {
    display: block
}

.tab_detail_ceil {
    padding: 25rpx 31rpx 10rpx 31rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.title {
    border-bottom: 1px solid #f5f5f5;
    padding-bottom: 18rpx;
    font-size: 30rpx;
    color: #333;
    word-wrap: break-word
}

.user {
    display: flex;
    align-items: center;
    margin-top: 15rpx;
}
.userName{
    font-size: 12px;
    color: #999;
}
.firStep{
    display: flex;
    align-items: center
}
.firStep image{
    width: 20px;
    height: 20px;
    margin-right: 20px;
}
.AnswerPortrait {
    width: 50rpx;
    height: 50rpx;
}

.answer_name,
.position {
    margin: 0 24rpx 0 19rpx;
    font-size: 26rpx;
    color: #333;
}

.position {
    color: #666;
}

.content {
    margin-top: 19rpx;
    display: flex;
}

.detail_content {
    font-size: 24rpx;
    line-height: 34rpx;
    color: #666;
}

.answer {
    display: inline-block;
    flex: 0 0 50rpx;
    font-size: 24rpx;
    color: #666;
    margin-right: 19rpx;
    box-sizing: border-box;
    text-align: center
}

.time {
    display: flex;
    flex-direction: row-reverse;
}

.time text {
    margin-top: 14rpx;
    font-size: 20rpx;
    line-height: 34rpx;
    color: #aaa;
}

.more {
    text-align: center;
    font-size: 20rpx;
    color: #aaaaaa;
    padding: 27rpx 0 19rpx 0;
}

.click_button {
    font-size: 20rpx;
    color: #666;
    margin-top: 28rpx;
    display: flex;
    justify-content: flex-end
}

.click_button view {
    text-align: center;
    display: inline-block;
    height: 30rpx;
    border: 2rpx solid #666;
    border-radius: 80px;
    padding: 1px 9px;
    line-height: 30rpx;
}

.click_button view:first-child {
    margin-right: 10px;
}

.click_button i {
    font-size: 20rpx;
    margin-right: 4px;
}

.starActive {
    color: #c40000;
    border: 1px solid #c40000 !important;
}

page,
.container,
.replyInput {
    height: 100%;
}

.replyInput {
    position: fixed;
    top: 0px;
    width: 100%;
    background: rgba(0, 0, 0, .4);
    height: 100%;
    z-index: 9999;
}

.inputt {
    background: #f6f6f6;
    width: 100%;
    height: 120rpx;
    padding: 10px 15px;
    box-sizing: border-box;
    position: absolute;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index:9999;
}

.inputt input {
    width: 100%;
    height: 90%;
    padding: 0 12px;
    font-size: 16px;
    background: #eee;
    border-radius: 100px;
    padding-right: 13vw;
    border: 1px solid #f6f6f6;
    z-index:9999;
}

.icon-heart1 {
    font-size: 10px;
}

.readMore {
    display: block;
    text-align: right;
    color: #14a7e4;
}

.reply_Mes {
    background: #eee;
    padding: 20rpx 30rpx;
    font-size: 24rpx;
    color: #333;
}

.icon-tijiao {
    font-size: 32px;
    color: #c40000;
    margin-left: 10px;
    position: absolute;
    right: 17px;
}

.newsReply {
    position: relative;
    height: 100%;
}