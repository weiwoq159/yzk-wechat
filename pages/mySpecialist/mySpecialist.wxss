/* pages/specialist/specialist.wxss */
.container{
    margin-top:0px;
    padding-top:0px;
}
.specia{
    padding: 45rpx 60rpx;
    margin-top: 31rpx;
    background: #fff;
}
.specia button{
    height: 50rpx;
    background: #c40000;
    font-size: 28rpx;
    border-radius: 80rpx;
    line-height: 50rpx;
    color:#fff;
}
.gotoDetail::after{
    border: none;
}
.line{
    height:4px;
    width: 50rpx;
    background: #c40000;
    border-radius: 4px;
    margin: 0 auto;
    margin-top:20rpx;
    display: none
}
.tab_title{
    padding:22rpx 207rpx;
    text-align: center;
}
.active .line{
    display: block
}
.tab_detail_ceil{
    padding:25rpx 31rpx 0 31rpx;
    background: #fff;
    margin-bottom: 20rpx;
}
.title{
    border-bottom: 1px solid #f5f5f5;
    padding-bottom:18rpx;
    font-size: 30rpx;
    color: #333;
}
.user{
    display: flex;
    align-items: center;
    margin-top:15rpx;
}
.AnswerPortrait{
    width: 50rpx;
    height: 50rpx;
}
.answer_name, .position{
    margin:0 24rpx 0 19rpx;
    font-size: 26rpx;
    color:#333;
}
.position{
    color:#666;
}
.content{
    margin-top:19rpx;
    display: flex;
}
.detail_content{
    font-size: 24rpx;
    line-height: 34rpx;
    color: #666;
    word-wrap: break-word;
}
.answer {
    display: inline-block;
    flex:0 0 50rpx;
    font-size: 24rpx;
    color: #666;
    margin-right:19rpx;
    box-sizing: border-box;
    text-align: center
}
.time{
    display: flex;
    flex-direction: row-reverse;
}
.time text{
    margin-top: 14rpx;
    font-size: 20rpx;
    line-height: 34rpx;
    color:#aaa;
}
.more{
    text-align: center;
	font-size: 20rpx;
    color: #aaaaaa;
    padding:27rpx 0 19rpx 0;   
}